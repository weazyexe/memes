<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorLightBlue</item>
        <item name="colorPrimaryDark">@color/colorDeepBlue</item>
        <item name="colorAccent">@color/colorBlue</item>

        <item name="android:colorBackground">@color/colorBlue</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="colorOnBackground">@color/colorWhite</item>
        <item name="colorSurface">@color/colorBlue</item>
        <item name="colorOnSurface">@color/colorLightGrey</item>

        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="AppTheme.Launcher" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="TextField" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/colorBlueVariant</item>
        <item name="errorTextColor">@color/colorRed</item>
        <item name="errorIconDrawable">@android:color/transparent</item>
    </style>

    <style name="TextField.Password" parent="TextField">
        <item name="passwordToggleEnabled">true</item>
        <item name="passwordToggleTint">?android:colorPrimary</item>
        <item name="helperTextTextColor">@color/colorWhite</item>
    </style>

    <style name="Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">?android:colorPrimary</item>
        <item name="android:textColor">?android:colorAccent</item>
    </style>

</resources>
